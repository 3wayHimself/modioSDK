include Sources.mk

CC = g++
CFLAGS = -c -Wall -std=c++11 -lcurl -pthread -lz
LDFLAGS = -lcurl -pthread -lz
SOURCES = $(MODWORKS_WRAPPERS) $(MODWORKS_DEPENDENCIES) ModworksSDK.cpp Utility.cpp Mod.cpp
OBJECTS = $(SOURCES:.cpp=.o)
LIBRARY = libmodworks.a

.cpp.o:
	$(CC) $(CFLAGS) $< -o $@ -I ../include

$(LIBRARY): $(OBJECTS)
	ar $(ARFLAGS) $@ $^

clean:
	-find . -name '*.o' -exec rm -r {} \;
	-rm -f $(LIBRARY)
