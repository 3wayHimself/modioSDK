include Sources.mk

CC = g++
CFLAGS = -c -Wall -std=c++11
SOURCES = $(MODIO_SOURCES) dependencies/dirent/dirent.cpp
OBJECTS = $(SOURCES:.cpp=.o)
LIBRARIES = ../lib/libcurl.a ../lib/libcurldll.a ../lib/libz.a
IMPORT_LIBRARY = modio.a
LIBRARY = modio.dll
VARIABLES_DEFINITION=-DMINGW

.cpp.o:
	$(CC) -DBUILDING_MODIO_DLL $(CFLAGS) $< -o $@ -I ../include $(VARIABLES_DEFINITION)

$(LIBRARY): $(OBJECTS)
	$(CC) -shared -o $(LIBRARY) $(OBJECTS) -Wl,--out-implib,$(IMPORT_LIBRARY) $(LIBRARIES)

clean:
	-find . -name '*.o' -exec rm -r {} \;
	-rm -f $(IMPORT_LIBRARY)
	-rm -f $(LIBRARY)
