include Sources.mk

CC = cl.exe
CFLAGS = /EHsc /MD /LD 
SOURCES = $(MODWORKS_SOURCES) dirent/dirent.cpp
LIBRARIES = ../lib/libcurl.a ../lib/libcurldll.a ../lib/zlib.lib ../lib/zdll.lib ../lib/pthreadVC2.lib
OUTPUT_NAME = modworks

build:
 $(CC) $(CFLAGS) /Fe$(OUTPUT_NAME) $(SOURCES) /DBUILDING_MODWORKS_DLL /I ../include /link $(LIBRARIES) /SUBSYSTEM:CONSOLE

clean:
 del *.obj
 del $(OUTPUT_NAME).*