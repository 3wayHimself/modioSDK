include Sources.mk

CC = clang++
CFLAGS = -c -Wall -std=c++11 -fPIC
LDFLAGS = -lcurl -pthread -lz
SOURCES = $(MODWORKS_SOURCES)
OBJECTS = $(SOURCES:.cpp=.o)
LIBRARY = modworks.dylib

.cpp.o:
	$(CC) $(CFLAGS) $< -o $@ -I ../include

$(LIBRARY): $(OBJECTS)
	$(CC) -shared -o $@ $^ -lz -lcurl

clean:
	-find . -name '*.o' -exec rm -r {} \;
	-rm -f $(LIBRARY)
