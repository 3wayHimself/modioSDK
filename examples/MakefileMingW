CC=g++
CFLAGS=-c -Wall -std=c++11
LDFLAGS=-pthread
SOURCES=GetMods.cpp
OBJECTS=$(SOURCES:.cpp=.o)
EXECUTABLE=GetMods
LIBRARIES=libmodworks.a libcurl.a libcurldll.a

all: $(SOURCES) $(EXECUTABLE)

$(EXECUTABLE): $(OBJECTS)
	$(CC) $(LDFLAGS) $(OBJECTS) $(LIBRARIES) -o $@ -I ../include

.cpp.o:
	$(CC) $(CFLAGS) $< -o $@ -I ../include

clean:
	-find . -name '*.o' -exec rm -r {} \;
	-rm -f $(EXECUTABLE)

run:
	$ ./$(EXECUTABLE)
